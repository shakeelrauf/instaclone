
<!-- Page content wrapper-->
<div id="page-content-wrapper">
  <!-- Top navigation-->
  <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
    <div class="container-fluid">
    	<%= link_to posts_path, class: "nav-link" do %>
			  <span class="sr-only">InstaClone</span>
			<% end %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">

					<li class="nav-item">
					  <%= link_to posts_path, class: "nav-link" do %>
						  <span class="sr-only">Posts</span>
						<% end %>
          </li>
				
					<li class="nav-item">
					  <%= link_to users_path, class: "nav-link" do %>
						  <span class="sr-only">Users</span>
						<% end %>
          </li>

          <li class="nav-item active">
					  <%= link_to notifications_path, class: "nav-link notification " do %>
					  	<div class="d-flex">
							  <%= heroicon "bell", variant: :outline, options: { class: "", role: "button",style: "width: 20px;" } %>
							  <%= tag.div id: :notifications_count do %>
							    <%= render "notifications/count", count: current_user.unviewed_notifications_count %>
							  <% end %>
						  </div>
						<% end %>
          </li>
					
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= current_user.email %></a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            	<%= link_to "Log out", destroy_user_session_path, :method => :delete ,class: 'dropdown-item'%>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- Page content-->
</div>	